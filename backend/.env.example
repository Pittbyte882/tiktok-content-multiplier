# Application
APP_NAME=TikTok Content Multiplier
APP_VERSION=1.0.0
DEBUG=False

# API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Database (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here

# Redis (for Celery background jobs)
REDIS_URL=redis://localhost:6379/0

# Stripe (Payments)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PRICE_ID_CREATOR=price_creator_plan_id
STRIPE_PRICE_ID_AGENCY=price_agency_plan_id

# JWT Authentication
SECRET_KEY=your_super_secret_jwt_key_generate_random_string
ALGORITHM=HS256
